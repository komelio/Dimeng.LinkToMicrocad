<Window x:Class="QuoteExport.HardwaresViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="五金件" Height="396" Width="564">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button Content="关闭" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <ListView Margin="5" ItemsSource="{Binding Hardwares}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Description}" Width="150"/>
                    <GridViewColumn Header="SKU" DisplayMemberBinding="{Binding SKU}" Width="100"/>
                    <GridViewColumn Header="数量" DisplayMemberBinding="{Binding Number}" Width="70"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
