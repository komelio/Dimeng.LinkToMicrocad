<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/app.css" rel="stylesheet" type="text/css" /> 
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.ztree.core-3.5.js" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="./" id="brand"></a>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("首页", "Index", "Home", null, null)</li>
                    <li>@Html.ActionLink("发布", "Index", "Releases", null, null)</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            数据
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("产品", "List", "Products", null, null)</li>
                            <li>@Html.ActionLink("材料", "List", "Materials", null, null)</li>
                            <li>@Html.ActionLink("材质", "List", "Textures", null, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("支持", "Support", "Home", null, null)</li>
                    <li><a href="">设置</a></li>
                    <li>@Html.ActionLink("关于", "About", "Home", null, null)</li>
                </ul>
            </div>
        </div>
    </div>

    <div id="mainbody">
        @RenderBody()
    </div>
   

    <footer class="bs-footer">
        <div class="container">

            <div class="row copyright">
                <a href="./">
                    <img class="footer-brand" src="~/img/Logo.png" />
                </a>
                <div class="footer-legal pull-right">
                    &copy;  &nbsp; 缔盟（厦门）软件科技有限公司 @DateTime.Now.Year &nbsp; 版权所有
                </div>
            </div>
        </div>

    </footer>
</body>
</html>