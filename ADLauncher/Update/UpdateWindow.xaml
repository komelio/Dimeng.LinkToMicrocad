<Window x:Class="ADLauncher.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UpdateWindow" Height="100" Width="545" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ProgressBar Grid.Row="1"  Grid.Column="1" Foreground="#FFE21918" Value="{Binding ProgressValue}" Maximum="{Binding ProgressMax}" />
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,15,0,0"
                   TextWrapping="Wrap" Text="{Binding ProgressText}" VerticalAlignment="Top"/>

    </Grid>
</Window>
